<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="homeScreenPane" maxHeight="Infinity" maxWidth="Infinity" minHeight="500.0" minWidth="800.0" prefHeight="600.0" prefWidth="1000.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aims.core.presentation.controllers.HomeScreenController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <VBox spacing="10" styleClass="padding-10, search-controls">
            <Label text="Welcome to AIMS - Your Internet Media Store!" styleClass="screen-title" alignment="CENTER" maxWidth="Infinity">
                 <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>
            <HBox spacing="10" alignment="CENTER_LEFT" maxWidth="Infinity">
                <TextField fx:id="searchField" promptText="Search products by title..." HBox.hgrow="ALWAYS" minWidth="200.0" onAction="#handleSearchAction"/>
                <ComboBox fx:id="categoryComboBox" promptText="All Categories" minWidth="150.0"/>
                <ComboBox fx:id="sortByPriceComboBox" promptText="Sort by Price" minWidth="150.0"/>
                <Button text="Search" onAction="#handleSearchAction" styleClass="button-primary"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="scroll-pane" maxHeight="Infinity" maxWidth="Infinity">
            <FlowPane fx:id="productFlowPane" hgap="15" vgap="15" styleClass="product-grid" alignment="TOP_LEFT" prefWrapLength="1000.0"/>
        </ScrollPane>
    </center>
    <bottom>
        <HBox fx:id="paginationControls" spacing="10" alignment="CENTER" styleClass="pagination-controls" minHeight="60.0">
            <Button fx:id="prevPageButton" text="Previous" onAction="#handlePrevPageAction" styleClass="button-secondary"/>
            <Label fx:id="currentPageLabel" text="Page 1/X" styleClass="quantity-label"/>
            <Button fx:id="nextPageButton" text="Next" onAction="#handleNextPageAction" styleClass="button-secondary"/>
        </HBox>
    </bottom>
</BorderPane>