<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aims.presentation.controllers.HomeScreenController">
    <top>
        <VBox spacing="10" styleClass="padding-10">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Search products..." HBox.hgrow="ALWAYS" onAction="#handleSearchAction"/>
                <ComboBox fx:id="categoryComboBox" promptText="All Categories"/>
                <ComboBox fx:id="sortByPriceComboBox" promptText="Sort by Price"/>
                <Button text="Search" onAction="#handleSearchAction" styleClass="button-primary"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true">
            <FlowPane fx:id="productFlowPane" hgap="15" vgap="15" styleClass="padding-10" alignment="TOP_LEFT"/>
        </ScrollPane>
    </center>
    <bottom>
        <HBox fx:id="paginationControls" spacing="10" alignment="CENTER" styleClass="padding-10">
            <Button fx:id="prevPageButton" text="Previous" onAction="#handlePrevPageAction"/>
            <Label fx:id="currentPageLabel" text="Page 1/X"/>
            <Button fx:id="nextPageButton" text="Next" onAction="#handleNextPageAction"/>
        </HBox>
    </bottom>
</BorderPane>