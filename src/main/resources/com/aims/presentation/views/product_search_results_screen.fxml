<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="searchResultsPane" prefHeight="600.0" prefWidth="1000.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aims.core.presentation.controllers.ProductSearchResultsController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <VBox spacing="10" styleClass="padding-10">
            <Label fx:id="searchResultsTitleLabel" text="Search Results" styleClass="screen-title" alignment="CENTER" maxWidth="Infinity">
                 <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Search products..." HBox.hgrow="ALWAYS" onAction="#handleSearchAction"/>
                <ComboBox fx:id="categoryComboBox" promptText="All Categories"/>
                <ComboBox fx:id="sortByPriceComboBox" promptText="Sort by Price"/>
                <Button text="Search" onAction="#handleSearchAction" styleClass="button-primary"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true">
            <FlowPane fx:id="productFlowPane" hgap="15" vgap="15" styleClass="padding-10" alignment="TOP_LEFT"/>
        </ScrollPane>
    </center>
    <bottom>
        <HBox fx:id="paginationControls" spacing="10" alignment="CENTER" styleClass="padding-10">
            <Button fx:id="prevPageButton" text="Previous" onAction="#handlePrevPageAction"/>
            <Label fx:id="currentPageLabel" text="Page 1/X"/>
            <Button fx:id="nextPageButton" text="Next" onAction="#handleNextPageAction"/>
        </HBox>
    </bottom>
</BorderPane>