<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="pendingOrdersPane" prefHeight="700.0" prefWidth="950.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aims.core.presentation.controllers.PendingOrdersController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <VBox spacing="10">
            <Label text="Pending Orders Review" styleClass="screen-title-large" BorderPane.alignment="CENTER">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>
            <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="padding-5">
                <Button text="Refresh List" onAction="#handleRefreshAction" styleClass="button-secondary"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="pendingOrdersTableView" prefHeight="550.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="orderIdColumn" prefWidth="180.0" text="Order ID">
                    <cellValueFactory><PropertyValueFactory property="orderId" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="orderDateColumn" prefWidth="150.0" text="Order Date">
                    <cellValueFactory><PropertyValueFactory property="orderDate" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="customerInfoColumn" prefWidth="200.0" text="Customer Info (Name/User ID)"/>
                <TableColumn fx:id="totalAmountColumn" prefWidth="150.0" text="Total Amount">
                    <cellValueFactory><PropertyValueFactory property="totalAmountPaid" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="itemCountColumn" prefWidth="100.0" text="Item Count"/>
                <TableColumn fx:id="actionsColumn" prefWidth="120.0" text="Actions"/>
            </columns>
            <placeholder>
                <Label text="No orders are currently pending processing."/>
            </placeholder>
            <BorderPane.margin>
                <Insets top="10.0" bottom="10.0"/>
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox fx:id="paginationControls" spacing="10" alignment="CENTER" styleClass="padding-10">
            <Button fx:id="prevPageButton" text="Previous" onAction="#handlePrevPageAction"/>
            <Label fx:id="currentPageLabel" text="Page 1/X"/>
            <Button fx:id="nextPageButton" text="Next" onAction="#handleNextPageAction"/>
        </HBox>
    </bottom>
</BorderPane>