<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.input.MouseEvent?>

<VBox fx:id="productCardVBox" alignment="CENTER" spacing="12.0"
      styleClass="product-card"
      stylesheets="/styles/global.css"
      minHeight="350.0" maxHeight="420.0"
      minWidth="260.0" maxWidth="340.0"
      prefWidth="-1.0"
      prefHeight="-1.0"
      onMouseClicked="#handleViewProductDetails" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.aims.core.presentation.controllers.ProductCardController">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>
    <ImageView fx:id="productImageView" fitHeight="180.0" fitWidth="140.0" pickOnBounds="true" preserveRatio="true">
        <VBox.margin>
            <Insets bottom="12.0"/>
        </VBox.margin>
    </ImageView>
    <Label fx:id="productTitleLabel" text="Product Title"
           styleClass="product-title"
           wrapText="true" textAlignment="CENTER"
           minHeight="50.0" maxHeight="70.0" maxWidth="240.0"
           alignment="CENTER"/>
    <Label fx:id="productPriceLabel" text="0 VND"
           styleClass="product-price"
           alignment="CENTER"/>
    <Label fx:id="productAvailabilityLabel" text="Available: 0"
           styleClass="product-availability"
           alignment="CENTER"/>
    <Button fx:id="addToCartButton" text="Add to Cart"
            styleClass="add-to-cart-button"
            onAction="#handleAddToCartAction"
            maxWidth="Infinity" minWidth="220.0"
            VBox.vgrow="NEVER"/>
</VBox>