<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.input.MouseEvent?> <VBox fx:id="productCardVBox" alignment="CENTER" spacing="12.0" 
      minHeight="350.0" maxHeight="380.0" minWidth="280.0" maxWidth="320.0" prefWidth="300.0" prefHeight="360.0"
      onMouseClicked="#handleViewProductDetails" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.aims.core.presentation.controllers.ProductCardController"
      style="-fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 4, 0, 0, 2);">
