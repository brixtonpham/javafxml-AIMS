<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox fx:id="productCardVBox" alignment="CENTER" spacing="5" styleClass="product-card" prefWidth="200" onMouseClicked="#handleViewProductDetails">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <ImageView fx:id="productImageView" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
    <Label fx:id="productTitleLabel" styleClass="product-title" text="Product Title" wrapText="true" textAlignment="CENTER"/>
    <Label fx:id="productPriceLabel" styleClass="product-price" text="0 VND"/>
    <Label fx:id="productAvailabilityLabel" styleClass="product-availability" text="Available: 0"/>
    <Button fx:id="addToCartButton" text="Add to Cart" onAction="#handleAddToCartAction" styleClass="button-success"/>
</VBox>