<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.SelectionMode?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="addUserFormPane" spacing="15.0" styleClass="dialog-pane" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aims.core.presentation.controllers.AddUserFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Create New User Account" styleClass="dialog-title-large">
        <VBox.margin>
            <Insets bottom="15.0" />
        </VBox.margin>
    </Label>

    <GridPane hgap="10" vgap="10">
        <Label text="Username*:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="label-form"/>
        <TextField fx:id="usernameField" promptText="Enter username" GridPane.rowIndex="0" GridPane.columnIndex="1" HBox.hgrow="ALWAYS"/>

        <Label text="Email*:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="label-form"/>
        <TextField fx:id="emailField" promptText="Enter email address" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Password*:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="label-form"/>
        <PasswordField fx:id="passwordField" promptText="Enter initial password" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Confirm Password*:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="label-form"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm initial password" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        
        <Label text="User ID (Optional):" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="label-form"/>
        <TextField fx:id="userIdField" promptText="Leave blank to auto-generate" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Initial Status*:" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="label-form"/>
        <ComboBox fx:id="statusComboBox" promptText="Select Status" GridPane.rowIndex="5" GridPane.columnIndex="1" prefWidth="250.0"/>
        
        <Label text="Assign Roles*:" GridPane.rowIndex="6" GridPane.columnIndex="0" styleClass="label-form" GridPane.valignment="TOP"/>
        <ListView fx:id="rolesListView" prefHeight="100.0" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="130.0" prefWidth="130.0"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
    </GridPane>

    <Label fx:id="errorMessageLabel" styleClass="error-message" wrapText="true" managed="false" visible="false"/>

    <HBox alignment="CENTER_RIGHT" spacing="15" styleClass="padding-10-top">
        <Button text="Cancel" onAction="#handleCancelAction" styleClass="button-secondary" cancelButton="true"/>
        <Button fx:id="createUserButton" text="Create User" onAction="#handleCreateUserAction" styleClass="button-success" defaultButton="true"/>
    </HBox>
</VBox>