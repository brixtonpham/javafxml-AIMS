<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="userManagementPane" prefHeight="700.0" prefWidth="1000.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aims.core.presentation.controllers.AdminUserManagementController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <VBox spacing="10">
            <Label text="User Account Management" styleClass="screen-title-large" BorderPane.alignment="CENTER">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchUserField" promptText="Search by Username or Email..." HBox.hgrow="ALWAYS" onAction="#handleSearchUserAction"/>
                <ComboBox fx:id="roleFilterComboBox" promptText="Filter by Role" />
                <ComboBox fx:id="statusFilterComboBox" promptText="Filter by Status" />
                <Button text="Search/Filter" onAction="#handleSearchUserAction" styleClass="button-primary"/>
                <Button text="Clear Filters" onAction="#handleClearFiltersAction" styleClass="button-secondary"/>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="padding-5">
                <Button text="Add New User" onAction="#handleAddNewUserAction" styleClass="button-success"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="usersTableView" prefHeight="500.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="userIdColumn" prefWidth="150.0" text="User ID">
                    <cellValueFactory><PropertyValueFactory property="userId" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="usernameColumn" prefWidth="150.0" text="Username">
                    <cellValueFactory><PropertyValueFactory property="username" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email">
                    <cellValueFactory><PropertyValueFactory property="email" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="rolesColumn" prefWidth="150.0" text="Roles"/>
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status">
                    <cellValueFactory><PropertyValueFactory property="userStatus" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="actionsUserColumn" prefWidth="220.0" text="Actions"/>
            </columns>
            <placeholder>
                <Label text="No users found matching your criteria."/>
            </placeholder>
            <BorderPane.margin>
                <Insets top="10.0" bottom="10.0"/>
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox fx:id="userPaginationControls" spacing="10" alignment="CENTER" styleClass="padding-10">
            <Button fx:id="prevUserPageButton" text="Previous" onAction="#handlePrevUserPageAction"/>
            <Label fx:id="currentUserPageLabel" text="Page 1/X"/>
            <Button fx:id="nextUserPageButton" text="Next" onAction="#handleNextUserPageAction"/>
        </HBox>
    </bottom>
</BorderPane>