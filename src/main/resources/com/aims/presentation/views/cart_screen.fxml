<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="cartScreenPane" prefHeight="600.0" prefWidth="800.0"  xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aims.core.presentation.controllers.CartScreenController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <VBox spacing="10.0" alignment="TOP_CENTER">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <Label text="Your Shopping Cart" alignment="CENTER" maxWidth="Infinity">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>
        </VBox>
    </top>
    <center>
        <ScrollPane fx:id="cartScrollPane" fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" maxHeight="Infinity" maxWidth="Infinity">
            <VBox fx:id="cartItemsContainerVBox" spacing="10.0" alignment="TOP_CENTER">
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </padding>
            </VBox>
        </ScrollPane>
    </center>
    <bottom>
        <VBox spacing="15.0" alignment="CENTER_RIGHT" minHeight="80.0">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <Label fx:id="stockWarningLabel" wrapText="true" textAlignment="CENTER" managed="false" visible="false" maxWidth="Infinity"/>
            <HBox alignment="CENTER_RIGHT" spacing="20.0" maxWidth="Infinity">
                <Label fx:id="totalCartPriceLabel" text="Total (excl. VAT): 0 VND" alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS"/>
                <Button text="Clear Cart" onAction="#handleClearCartAction" minWidth="100.0"/>
                <Button fx:id="checkoutButton" text="Proceed to Checkout" onAction="#handleProceedToCheckoutAction" minWidth="150.0"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>