<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aims.presentation.controllers.CartScreenController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <Label text="Your Shopping Cart" styleClass="screen-title" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <VBox spacing="10">
            <TableView fx:id="cartTableView" prefHeight="400.0">
                <columns>
                    <TableColumn fx:id="productImageColumn" text="Image" prefWidth="100"/>
                    <TableColumn fx:id="productTitleColumn" text="Product" prefWidth="250">
                        <cellValueFactory><PropertyValueFactory property="title" /></cellValueFactory> </TableColumn>
                    <TableColumn fx:id="unitPriceColumn" text="Unit Price (excl. VAT)" prefWidth="150">
                        <cellValueFactory><PropertyValueFactory property="unitPriceExclVAT" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100"/>
                    <TableColumn fx:id="totalItemPriceColumn" text="Total (excl. VAT)" prefWidth="150">
                         <cellValueFactory><PropertyValueFactory property="totalPriceExclVAT" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="100"/>
                </columns>
                <placeholder>
                    <Label text="Your cart is empty."/>
                </placeholder>
            </TableView>
            <VBox fx:id="stockWarningVBox" spacing="5" styleClass="warning-box"/>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="20" styleClass="padding-10">
            <Label fx:id="totalCartPriceLabel" text="Total (excl. VAT): 0 VND" styleClass="label-bold-large"/>
            <Button text="Clear Cart" onAction="#handleClearCartAction" styleClass="button-danger"/>
            <Button text="Proceed to Checkout" onAction="#handleProceedToCheckoutAction" styleClass="button-primary" fx:id="checkoutButton"/>
        </HBox>
    </bottom>
</BorderPane>