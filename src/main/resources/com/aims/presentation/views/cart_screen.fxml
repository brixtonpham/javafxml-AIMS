<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="cartScreenPane" prefHeight="600.0" prefWidth="800.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aims.core.presentation.controllers.CartScreenController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <Label text="Your Shopping Cart" styleClass="screen-title-large" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="20.0" />
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <ScrollPane fx:id="cartScrollPane" fitToWidth="true" prefHeight="450.0">
            <VBox fx:id="cartItemsContainerVBox" spacing="10" styleClass="padding-5">
                </VBox>
        </ScrollPane>
    </center>
    <bottom>
        <VBox spacing="10" alignment="CENTER_RIGHT" styleClass="padding-10">
            <Label fx:id="stockWarningLabel" styleClass="warning-text" wrapText="true" managed="false" visible="false"/>
            <HBox alignment="CENTER_RIGHT" spacing="20">
                <Label fx:id="totalCartPriceLabel" text="Total (excl. VAT): 0 VND" styleClass="label-bold-large"/>
                <Button text="Clear Cart" onAction="#handleClearCartAction" styleClass="button-danger"/>
                <Button fx:id="checkoutButton" text="Proceed to Checkout" onAction="#handleProceedToCheckoutAction" styleClass="button-primary"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>