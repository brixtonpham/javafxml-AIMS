<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="adminProductListPane" prefHeight="700.0" prefWidth="1000.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aims.core.presentation.controllers.AdminProductListController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <VBox spacing="10">
            <Label text="Product Management" styleClass="screen-title-large" BorderPane.alignment="CENTER">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Search by Title or Barcode..." HBox.hgrow="ALWAYS" onAction="#handleSearchAction"/>
                <ComboBox fx:id="categoryFilterComboBox" promptText="Filter by Category" />
                <ComboBox fx:id="typeFilterComboBox" promptText="Filter by Type" />
                <Button text="Search/Filter" onAction="#handleSearchAction" styleClass="button-primary"/>
                <Button text="Clear Filters" onAction="#handleClearFiltersAction" styleClass="button-secondary"/>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="padding-5">
                <Button text="Add New Product" onAction="#handleAddNewProductAction" styleClass="button-success"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="productsTableView" prefHeight="500.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="100.0" text="ID">
                    <cellValueFactory><PropertyValueFactory property="productId" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="imageColumn" prefWidth="80.0" text="Image" />
                <TableColumn fx:id="titleColumn" prefWidth="250.0" text="Title">
                    <cellValueFactory><PropertyValueFactory property="title" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="typeColumn" prefWidth="100.0" text="Type">
                    <cellValueFactory><PropertyValueFactory property="productType" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="categoryColumn" prefWidth="150.0" text="Category">
                    <cellValueFactory><PropertyValueFactory property="category" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="priceColumn" prefWidth="120.0" text="Price (excl. VAT)">
                    <cellValueFactory><PropertyValueFactory property="price" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="stockColumn" prefWidth="80.0" text="Stock">
                    <cellValueFactory><PropertyValueFactory property="quantityInStock" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="actionsColumn" prefWidth="150.0" text="Actions"/>
            </columns>
            <placeholder>
                <Label text="No products found matching your criteria."/>
            </placeholder>
            <BorderPane.margin>
                <Insets top="10.0" bottom="10.0"/>
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox fx:id="paginationControls" spacing="10" alignment="CENTER" styleClass="padding-10">
            <Button fx:id="prevPageButton" text="Previous" onAction="#handlePrevPageAction"/>
            <Label fx:id="currentPageLabel" text="Page 1/X"/>
            <Button fx:id="nextPageButton" text="Next" onAction="#handleNextPageAction"/>
        </HBox>
    </bottom>
</BorderPane>